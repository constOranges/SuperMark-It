    "tags": [
        {
            "name": "users"
        },
        {
            "name": "items"
        }
    ],
    "components": {
        "schemas": {
            "UserRegister": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string",
                        "minLength": 8
                    },
                    "confirmPassword": {
                        "type": "string",
                        "minLength": 8
                    }
                },
                "required": [
                    "name",
                    "email",
                    "password",
                    "confirmPassword"
                ]
            }
        }
    },
    "paths": {
        "/users/register": {
            "post": {
                "tags": [
                    "users"
                ],
                "summary": "Register a user to the database",
                "description": "Register a user to the database",
                "operationId": "createUser",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserRegister"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid form data supplied"
                    },
                    "405": {
                        "description": "Validation exception"
                    }
                }
            }
        }
